<h1>Nova CI para <%= @ci_month.month %>/<%= @ci_month.year %></h1>
<%= form_with model: [ @ci_month, @ci_entry ], url: user_ci_month_ci_entries_path(@ci_month) do |form| %>
  <% if @ci_entry.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(@ci_entry.errors.count, "error") %> prohibited this ci_entry from being saved:</h2>

      <ul>
        <% @ci_entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <strong>Data:</strong> <%= @ci_entry.date.strftime("%d/%m/%Y") %>
    <%= form.hidden_field :date %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, rows: 5, class: "form-control" %>
  </div>

  <%= form.submit "Salvar", class: "btn btn-primary" %>
<% end %>
