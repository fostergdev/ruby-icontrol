<div class="mb-3">
  <%= link_to "➕ Nova CI", user_ci_entries_batch_new_path, class: "btn btn-success" %>
</div>

<% @ci_months.each do |month| %>
  <div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0"><%= month.month %>/<%= month.year %></h5>
      <%= link_to "➕ Adicionar", new_user_ci_month_ci_entry_path(month), class: "btn btn-sm btn-primary" %>
    </div>
    <div class="card-body">
      <% if month.ci_entries.any? %>
        <ul class="list-group list-group-flush">
          <% month.ci_entries.order(date: :asc).each do |entry| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <strong><%= entry.date.strftime("%d/%m/%Y") %>:</strong>
                <%= entry.content %>
              </div>
              <div class="btn-group">
                <%= link_to edit_user_ci_month_ci_entry_path(month, entry), class: "btn btn-sm btn-outline-primary" do %>
                  <i class="bi bi-pencil"></i> Editar
                <% end %>
                <%= link_to user_ci_month_ci_entry_path(month, entry), data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' }, class: "btn btn-sm btn-outline-danger" do %>
                  <i class="bi bi-trash"></i> Remover
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">Nenhuma entrada para este mês.</p>
      <% end %>
    </div>
  </div>
<% end %>

<%# Incluindo os ícones do Bootstrap %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">